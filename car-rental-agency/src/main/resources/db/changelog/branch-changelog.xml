<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="create-table-branch" author="George Niculae">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="car-rental-agency" catalogName="car-rental-agency" tableName="branch"/>
            </not>
        </preConditions>

        <createTable tableName="branch">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="address" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="rental_office_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="rental_office_id"
                                 baseTableName="branch"
                                 constraintName="fk_branch_rental_office_id"
                                 referencedColumnNames="id"
                                 referencedTableName="rental_office"/>
    </changeSet>

    <changeSet id="add-branch-1" author="George Niculae">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*)
                FROM branch
            </sqlCheck>
        </preConditions>

        <insert tableName="branch">
            <column name="name" value="Branch 1"/>
            <column name="address" value="Ploiesti"/>
            <column name="rental_office_id" value="1"/>
        </insert>

        <insert tableName="branch">
            <column name="name" value="Branch 2"/>
            <column name="address" value="Bucuresti"/>
            <column name="rental_office_id" value="2"/>
        </insert>
    </changeSet>
</databaseChangeLog>
